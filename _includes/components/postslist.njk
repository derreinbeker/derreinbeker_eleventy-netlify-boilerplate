<section>
	{% for post in postslist | reverse %}
		<article>
			{% if post.data.titleintro %}
				<h4>{{ post.data.titleintro }}</h4>
			{% endif %}
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			<p>
				{% if post.data.summary %}
					{{ post.data.summary }}
				{% else %}
					{{ post.templateContent | excerpt | striptags }}
				{% endif %}
			</p>
		</article>
	{% endfor %}
</section>
