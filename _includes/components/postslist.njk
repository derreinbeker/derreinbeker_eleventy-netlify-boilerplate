<section class="articlelist">
	{% if postslistheader %}
		<h1>{{ postslistheader }}</h1>
	{% endif %}
	{% for post in postslist | reverse %}
		<article>
			{% if post.data.titleintro %}
				<h2>{{ post.data.titleintro }}</h3>
			{% endif %}
			<h1>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h2>
			<p>
				{% if post.data.description %}
					{{ post.data.description }}
				{% else %}
					{{ post.templateContent | excerpt | striptags }}
				{% endif %}
			</p>
		</article>
	{% endfor %}
</section>
