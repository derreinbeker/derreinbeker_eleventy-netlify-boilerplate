---
layout: layouts/base.njk
---

<article>
  <header>
	<h1>{{ title }}</h1>
	<p>
	  <small>
	    <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>â€ƒ{{ metadata.author.name }}
	  </small>
	</p>
  </header>
  
	{{ content | safe }}
	
	{% if tags %}
	  <p>
	  {% for tag in tags %}
	    {%- if tag != "post" -%}
	      {% set tagUrl %}/thema/{{ tag | slug }}/{% endset %}
	      <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
	    {%- endif -%}
	  {% endfor %}
	  </p>
	{% endif %}

</article>
