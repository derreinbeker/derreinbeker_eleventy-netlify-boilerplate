<h1>{{ title }}</h1>

<ul class="category-list">
{% for category in collections.categories | sort %}
  {% set categoryUrl %}/{{ category | slug }}/{% endset %}
  <li>
  <a href="{{ categoryUrl | url }}" class="cat">{{ category }}</a>
  </li>
{% endfor %}
</ul>